{
  "name": "Weihnachts-Python",
  "image": "mcr.microsoft.com/devcontainers/python:3",
  
  // Dieser Befehl klont das Kind-Repo über HTTPS.
  // Die HTTPS-Authentifizierung verwendet den oben konfigurierten Token.
  "postCreateCommand": "if [ ! -d \"child_repo\" ]; then git clone https://github.com/alexfederlin/adventskalender2025.git child_repo; fi",
  
  "customizations": {
    "codespaces": {
      "repositories": {
        "alexfederlin/adventskalender2025": {
          // 'write-all' für das Pushen der Missionen
          "permissions": "write-all" 
        }
      }
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.fontSize": 16,
        "terminal.integrated.fontSize": 16
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "oderwat.indent-rainbow" 
      ]
    }
  }
}