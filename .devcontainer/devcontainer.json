// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:2-3.12-bullseye",

 // Dieser Befehl wird ausgeführt, NACHDEM der Codespace erstellt wurde.
  // 1. Er prüft, ob der Ordner 'child_repo' schon existiert.
  // 2. Wenn nicht, klont er das Kind-Repo über HTTPS.
  //    In diesem Schritt verwendet Codespaces ZUVERLÄSSIG den internen Token.
  "postCreateCommand": "if [ ! -d \"child_repo\" ]; then git clone https://github.com/alexfederlin/adventskalender2025.git child_repo; fi",
  
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.fontSize": 16,
        "terminal.integrated.fontSize": 16
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "oderwat.indent-rainbow" 
      ]
    },
        "codespaces": {
      "repositories": {
        "my_org/my_repo": {
          "permissions": {
            "issues": "write"
          }
        }
      }
    }

  }

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
